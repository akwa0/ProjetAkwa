{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Messagerie üì®</h1>
            {% if nonLus > 0 %}
                <p class="text-danger"><strong>Vous avez {{ nonLus }} message(s) non lu(s)</strong></p>
            {% endif %}
        </div>
    </div>

    <div class="row mt-4">
        <!-- Liste des conversations -->
        <div class="col-md-12">
            {% if messages | length > 0 %}
                <div class="list-group">
                    {% set contacts = {} %}
                    {% for message in messages %}
                        {% set contactId = message.emetteur.id %}
                        {% if contactId not in contacts %}
                            {% set contacts = contacts | merge({(contactId): message.emetteur}) %}
                            <a href="{{ path('app_messagerie_conversation', {'id': message.emetteur.id}) }}" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <div class="d-flex align-items-center">
                                        {% if message.emetteur.profilImage %}
                                            <img src="{{ asset('uploads/' ~ message.emetteur.profilImage) }}"
                                                 alt="{{ message.emetteur.nom }}"
                                                 style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%; margin-right: 15px;">
                                        {% else %}
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px; border-radius: 50%; margin-right: 15px;">
                                                {{ message.emetteur.nom | first }}
                                            </div>
                                        {% endif %}
                                        <div>
                                            <h6 class="mb-1">{{ message.emetteur.nom }}</h6>
                                            <p class="mb-0 text-muted small">{{ message.contenu | slice(0, 50) }}{% if message.contenu | length > 50 %}...{% endif %}</p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <small class="text-muted">{{ message.dateEnvoie | date('d/m H:i') }}</small>
                                        {% if not message.lu %}
                                            <span class="badge badge-primary ml-2">Non lu</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <p>Aucune conversation pour le moment. <a href="{{ path('app_search_professionals') }}">Commencez par chercher un artiste</a></p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Retour -->
    <div class="row mt-5">
        <div class="col-md-12">
            <a href="{{ path('app_compte_client') }}" class="btn btn-secondary">‚Üê Retour au compte</a>
        </div>
    </div>
</div>
{% endblock %}
