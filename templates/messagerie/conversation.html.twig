{% extends 'base.html.twig' %}

{% block title %}Conversation avec {{ contact.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- En-tête de la conversation -->
            <div class="card mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        {% if contact.profilImage %}
                            <img src="{{ asset('uploads/' ~ contact.profilImage) }}"
                                 alt="{{ contact.nom }}"
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%; margin-right: 20px;">
                        {% else %}
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                 style="width: 60px; height: 60px; border-radius: 50%; margin-right: 20px;">
                                {{ contact.nom | first }}
                            </div>
                        {% endif %}
                        <div>
                            <h5 class="mb-0">{{ contact.nom }}</h5>
                            {% if contact.description %}
                                <small class="text-muted">{{ contact.description }}</small>
                            {% endif %}
                        </div>
                    </div>
                    <a href="{{ path('app_profil_public', {'id': contact.id}) }}" class="btn btn-outline-primary btn-sm">
                        Voir le profil
                    </a>
                </div>
            </div>

            <!-- Messages -->
            <div class="card mb-4" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                <div class="card-body">
                    {% if messages | length > 0 %}
                        {% for message in messages %}
                            <div class="mb-3">
                                {% if message.emetteur.id == app.user.id %}
                                    <!-- Message envoyé -->
                                    <div class="text-right">
                                        <div class="d-inline-block" style="background-color: #007bff; color: white; padding: 10px 15px; border-radius: 10px; max-width: 70%;">
                                            {{ message.contenu }}
                                            <br>
                                            <small style="opacity: 0.8;">{{ message.dateEnvoie | date('H:i') }}</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <!-- Message reçu -->
                                    <div class="text-left">
                                        <div class="d-inline-block" style="background-color: #e9ecef; color: #333; padding: 10px 15px; border-radius: 10px; max-width: 70%;">
                                            {{ message.contenu }}
                                            <br>
                                            <small style="opacity: 0.7;">{{ message.dateEnvoie | date('H:i') }}</small>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted text-center">Aucun message pour le moment. Commencez la conversation !</p>
                    {% endif %}
                </div>
            </div>

            <!-- Formulaire d'envoi -->
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.contenu) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Retour -->
            <div class="mt-4">
                <a href="{{ path('app_messagerie') }}" class="btn btn-secondary">← Retour aux conversations</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body {
        word-break: break-word;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
</style>
{% endblock %}
