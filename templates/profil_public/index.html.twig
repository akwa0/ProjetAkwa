{% extends 'base.html.twig' %}

{% block title %}Profil de {{ professionnel.nom }}{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('profils_pro/style.css') }}">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- En-tête avec photo et informations principales -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            {% if professionnel.profilImage %}
                                <img src="{{ asset('uploads/' ~ professionnel.profilImage) }}"
                                     alt="Photo de profil de {{ professionnel.nom }}"
                                     class="img-fluid rounded"
                                     style="max-width: 200px; width: 100%;">
                            {% else %}
                                <img src="{{ asset('images/default-profile.jpg') }}"
                                     alt="Pas de photo"
                                     class="img-fluid rounded"
                                     style="max-width: 200px; width: 100%;">
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h1>{{ professionnel.nom }}</h1>

                                    {% if professionnel.description %}
                                        <p class="lead">{{ professionnel.description }}</p>
                                    {% endif %}

                                    <div class="info-group">
                                        {% if professionnel.style %}
                                            <p><strong>Style :</strong> <span class="badge bg-info">{{ professionnel.style }}</span></p>
                                        {% endif %}

                                        {% if professionnel.experience %}
                                            <p><strong>Expérience :</strong> {{ professionnel.experience }} an(s)</p>
                                        {% endif %}

                                        {% if professionnel.ville %}
                                            <p><strong>Localisation :</strong> {{ professionnel.ville }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                {% if app.user and app.user.id != professionnel.id %}
                                    <button class="btn btn-sm favoris-btn" data-artiste-id="{{ professionnel.id }}" title="Ajouter aux favoris">
                                        ⭐
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Galerie de photos -->
            {% set photos = professionnel.photos | slice(0, 6) %}
            {% if photos | length > 0 %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Galerie ({{ professionnel.photos | length }} photo(s))</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for photo in photos %}
                                <div class="col-md-4 mb-3">
                                    <div class="photo-item">
                                        <div class="position-relative" style="display: inline-block; width: 100%;">
                                            <img src="{{ asset('uploads/' ~ photo.filename) }}"
                                                 alt="{{ photo.description }}"
                                                 class="img-fluid rounded"
                                                 style="width: 100%; height: 250px; object-fit: cover; display: block;">
                                            {% if app.user %}
                                                <div class="like-container" style="position: absolute; bottom: 10px; left: 10px;">
                                                    <button class="like-btn"
                                                            data-photo-id="{{ photo.id }}"
                                                            title="J'aime cette photo">
                                                        ❤️
                                                    </button>
                                                    <span class="like-count-badge" id="like-count-{{ photo.id }}">
                                                        {{ photo.likes | length }}
                                                    </span>
                                                </div>
                                            {% else %}
                                                <div class="like-container-guest" style="position: absolute; bottom: 10px; left: 10px;">
                                                    <span class="like-count-badge">
                                                        {{ photo.likes | length }}
                                                    </span>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="mt-2">
                                            {% if photo.description %}
                                                <p class="small text-muted mb-2">{{ photo.description }}</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Section contact -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Contact</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_messagerie', {'contact': professionnel.id}) }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope"></i> Contacter
                        </a>
                    </div>
                </div>
            </div>

            <!-- Retour à la recherche -->
            <div class="mt-4">
                <a href="{{ path('app_search_professionals') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour aux résultats
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group p {
        margin-bottom: 0.5rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }

    .photo-item {
        transition: transform 0.2s;
    }

    .photo-item:hover {
        transform: scale(1.02);
    }

    .like-container {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .like-btn {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #dc3545;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        font-size: 24px;
        line-height: 1;
    }

    .like-btn:hover {
        transform: scale(1.15);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
    }

    .like-btn:active {
        transform: scale(0.95);
    }

    .like-btn.liked {
        background: #dc3545;
        border-color: #dc3545;
    }

    .like-count-badge {
        background: rgba(255, 255, 255, 0.95);
        color: #333;
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .like-container-guest {
        display: flex;
        align-items: center;
    }

    .like-container-guest .like-count-badge {
        background: rgba(255, 255, 255, 0.95);
        color: #333;
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .favoris-btn {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #ffc107;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .favoris-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
    }

    .favoris-btn:active {
        transform: scale(0.95);
    }

    .favoris-btn.favoris {
        background: #ffc107;
        border-color: #ffc107;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const likeButtons = document.querySelectorAll('.like-btn');

    likeButtons.forEach(button => {
        const photoId = button.dataset.photoId;

        // Vérifier l'état du like au chargement
        fetch(`{{ path('app_like_check_photo', {'id': 0}) }}`.replace('0', photoId))
            .then(response => response.json())
            .then(data => {
                if (data.liked) {
                    button.classList.add('liked');
                }
            })
            .catch(error => console.error('Erreur lors de la vérification:', error));

        // Gérer le clic sur le bouton like
        button.addEventListener('click', function(e) {
            e.preventDefault();

            fetch(`{{ path('app_like_toggle_photo', {'id': 0}) }}`.replace('0', photoId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                // Mettre à jour le bouton
                if (data.liked) {
                    button.classList.add('liked');
                } else {
                    button.classList.remove('liked');
                }

                // Mettre à jour le compteur de likes
                const likeCountElement = document.getElementById(`like-count-${photoId}`);
                if (likeCountElement) {
                    const count = data.likeCount;
                    likeCountElement.textContent = count;
                }
            })
            .catch(error => console.error('Erreur:', error));
        });
    });

    // Gestion du bouton favoris
    const favorisBtn = document.querySelector('.favoris-btn');
    if (favorisBtn) {
        const artisteId = favorisBtn.dataset.artisteId;

        // Vérifier l'état du favori au chargement
        fetch(`{{ path('app_favoris_check_artiste', {'id': 0}) }}`.replace('0', artisteId))
            .then(response => response.json())
            .then(data => {
                if (data.favoris) {
                    favorisBtn.classList.add('favoris');
                }
            })
            .catch(error => console.error('Erreur lors de la vérification:', error));

        // Gérer le clic sur le bouton favoris
        favorisBtn.addEventListener('click', function(e) {
            e.preventDefault();

            fetch(`{{ path('app_favoris_toggle_artiste', {'id': 0}) }}`.replace('0', artisteId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    console.error('Erreur:', data.error);
                    return;
                }

                // Mettre à jour le bouton
                if (data.favoris) {
                    favorisBtn.classList.add('favoris');
                } else {
                    favorisBtn.classList.remove('favoris');
                }
            })
            .catch(error => console.error('Erreur:', error));
        });
    }
});
</script>
{% endblock %}
